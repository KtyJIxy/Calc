<NumbButton@Button>:
    background_color: "lavender"

<BasOpButton@Button>:
    background_color: "cyan"

<FailButton@Button>:
    background_color: "black"

<FuncButton@Button>:
    background_color: "khaki"

<MainScreen>:
    id: calc_scr
    display: entry
    rows: 10

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False

    BoxLayout: 
        NumbButton: 
            text: "7"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "8"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "9"
            on_press: entry.text += self.text
        BasOpButton:
            text: "+"
            on_press: entry.text += self.text 
            #Doesnt' work. Either function has to wait for second input or + is just a symbot to be parsed.
            #TODO: so 2 ways: new func or even new parser.
            #UPD. New function is not OOP.
            # 1. Parser. Look 'ast' module and parser-builders. Versatile. Overkill?
            # 2. Sandbox. Hard. Questionable. Small.
            # 3. Compromise. 'eval' with several 'ifs'. Symbols just keyboard symbols, i.e. '^' prints '**' or recoded for calculation.
    BoxLayout: 
        NumbButton: 
            text: "4"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "5"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "6"
            on_press: entry.text += self.text 
        BasOpButton: 
            text: "-"
            on_press: entry.text += self.text 
    BoxLayout: 
        NumbButton: 
            text: "1"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "2"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "3"
            on_press: entry.text += self.text 
        BasOpButton: 
            text: "*"
            on_press: entry.text += self.text 
    BoxLayout: 
        NumbButton: 
            text: "0"
            on_press: entry.text += self.text 
        FuncButton: 
            text: "."
            on_press: entry.text += self.text 
        FuncButton: 
            text: "C"
            on_press: entry.text = entry.text[:-1]
        FuncButton: 
            text: "AC"
            on_press: entry.text = ""
        BasOpButton: 
            text: "/"
            on_press: entry.text += self.text 
    BoxLayout: 
        FuncButton: 
            text: "="
            on_press: calc_scr.calculate(entry.text) 
            background_color: "orangered"
        FuncButton: 
            text: "("
            on_press: entry.text += self.text 
        FuncButton: 
            text: ")"
            on_press: entry.text += self.text 
        BasOpButton: 
            text: "^"
            on_press: entry.text += "**" 
    BoxLayout: 
        FailButton: 
            text: "âˆš"
            on_press: fm.root() 
        FailButton: 
            text: "%"
            on_press: fm.procentify()
        #FailButton: 
            #text:"M"
            #on_press: cm.memorize()
        FailButton: 
            text: "^2"
            on_press: fm.square()
        FailButton: 
            text: "^3"
            on_press: fm.cube()