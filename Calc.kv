<NumbButton@Button>:
    background_color: "lavender"

<BasOpButton@Button>:
    background_color: "cyan"

<FailButton@Button>:
    background_color: "black"

<FuncButton@Button>:
    background_color: "khaki"

<MainScreen>:
    id: calc_scr
    display: entry
    rows: 10

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False

    BoxLayout: 
        NumbButton: 
            text: "7"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "8"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "9"
            on_press: entry.text += self.text
        BasOpButton:
            text: "+"
            on_press: entry.text += self.text 
    BoxLayout: 
        NumbButton: 
            text: "4"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "5"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "6"
            on_press: entry.text += self.text 
        BasOpButton: 
            text: "-"
            on_press: entry.text += self.text 
    BoxLayout: 
        NumbButton: 
            text: "1"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "2"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "3"
            on_press: entry.text += self.text 
        BasOpButton: 
            text: "*"
            on_press: entry.text += self.text 
    BoxLayout: 
        NumbButton: 
            text: "0"
            on_press: entry.text += self.text 
        FuncButton: 
            text: "."
            on_press: entry.text += self.text 
        LongpressButton:
            text: 'C/AC'
            long_press_time: 1
            on_press: entry.text = entry.text[:-1] 
            on_long_press: entry.text = ""
            background_color: "khaki"
        BasOpButton: 
            text: "/"
            on_press: entry.text += self.text 
    BoxLayout: 
        FuncButton: 
            text: "="
            on_press: calc_scr.calculate(entry.text) 
            background_color: "orangered"
        FuncButton: 
            text: "("
            on_press: entry.text += self.text 
        FuncButton: 
            text: ")"
            on_press: entry.text += self.text 
        BasOpButton: 
            text: "^"
            on_press: entry.text += "**" 
    BoxLayout: 
        BasOpButton: 
            text: "âˆš"
            on_press: entry.text = str(fm.sqr_root(float(entry.text)))
        BasOpButton: 
            text: "%"
            on_press: entry.text = str(fm.procentify(float(entry.text)))
        #FailButton: 
            #text:"M"
            #on_press: cm.memorize()
        BasOpButton:
            text: "^2"
            on_press: entry.text = str(fm.square(float(entry.text)))
        BasOpButton: 
            text: "^3"
            on_press: entry.text = str(fm.cube(float(entry.text)))