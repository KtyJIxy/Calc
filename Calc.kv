#:import fm Calc.functions_main

<NumbButton@Button>:
    background_color: "lavender"

<BasOpButton@Button>:
    background_color: "cyan"

<FuncButton@Button>:
    background_color: "khaki"

<MainScreen>:
    id: calc_scr
    display: entry
    rows: 8

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False

    BoxLayout: 
        NumbButton: 
            text: "7"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "8"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "9"
            on_press: entry.text += self.text
        BasOpButton:
            text: "+"
            on_press: entry.text += self.text 
    BoxLayout: 
        NumbButton: 
            text: "4"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "5"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "6"
            on_press: entry.text += self.text 
        BasOpButton: 
            text: "-"
            on_press: entry.text += self.text 
    BoxLayout: 
        NumbButton: 
            text: "1"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "2"
            on_press: entry.text += self.text 
        NumbButton: 
            text: "3"
            on_press: entry.text += self.text 
        BasOpButton: 
            text: "*"
            on_press: entry.text += self.text 
    BoxLayout: 
        NumbButton: 
            text: "0"
            on_press: entry.text += self.text 
        FuncButton: 
            text: "."
            on_press: entry.text += self.text 
        LongpressButton:
            text: 'C/AC'
            long_press_time: 1
            on_press: entry.text = entry.text[:-1] 
            on_long_press: entry.text = ""
            background_color: "khaki"
        BasOpButton: 
            text: "/"
            on_press: entry.text += self.text 
    BoxLayout: 
        FuncButton: 
            text: "="
            on_press: calc_scr.calculate(entry.text) 
            background_color: "orangered"
        FuncButton: 
            text: "("
            on_press: entry.text += self.text 
        FuncButton: 
            text: ")"
            on_press: entry.text += self.text 
        BasOpButton: 
            text: "^"
            on_press: entry.text += "**" 
    BoxLayout: 
        BasOpButton: 
            text: "√"
            on_press: entry.text = str(fm.sqr_root(float(entry.text)))
        BasOpButton: 
            text: "%"
            on_press: entry.text = str(fm.procentify(float(entry.text)))
        BasOpButton:
            text: "^2"
            on_press: entry.text = str(fm.square(float(entry.text)))
        BasOpButton: 
            text: "^3"
            on_press: entry.text = str(fm.cube(float(entry.text)))
    BoxLayout: 
        LongpressButton:
            text: "MS/MR"
            on_press: 
                if fm.some==0: fm.set_int(entry.text) 
            on_long_press: entry.text += str(fm.get_int())
            background_color: "cyan"
        BasOpButton:
            #Works perfectly fine, but can remember None/"" which is not an issue for now.
            text: 'MC'
            on_press: fm.set_int(0)
        BasOpButton: 
            text: "x√"
            on_press: entry.text += "**(1/float("